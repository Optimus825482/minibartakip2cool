# Local Development Environment Variables
# Railway deployment için bu dosyaya ihtiyaç yok (DATABASE_URL otomatik)

# Database Type Selection
DB_TYPE=postgresql  # 'postgresql' veya 'mysql'

# PostgreSQL Configuration (Local)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_postgresql_password
DB_NAME=minibar_takip
DB_PORT=5432

# MySQL Configuration (Legacy - Optional)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=your_mysql_password
# DB_NAME=minibar_takip
# DB_PORT=3306

# Railway/Heroku PostgreSQL (Otomatik sağlanır)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Flask Configuration
SECRET_KEY=change-this-to-random-secret-key-in-production
FLASK_ENV=development

# Port (Railway otomatik PORT variable sağlar)
# PORT=5014

# Backup Configuration
BACKUP_DIR=/backups

# ML Anomaly Detection System Configuration
ML_ENABLED=true
ML_DATA_COLLECTION_INTERVAL=900  # 15 dakika (saniye)
ML_ANOMALY_CHECK_INTERVAL=300  # 5 dakika (saniye)
ML_TRAINING_SCHEDULE=0 0 * * *  # Her gece yarısı (cron format)
ML_MIN_DATA_POINTS=100  # Minimum veri noktası
ML_ACCURACY_THRESHOLD=0.85  # %85 doğruluk hedefi
