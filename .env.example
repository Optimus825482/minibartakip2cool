# ===========================================
# Minibar Takip Sistemi - Environment Variables
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/minibar_takip
DB_TYPE=postgresql
DB_HOST=localhost
DB_USER=minibar_user
DB_PASSWORD=your_secure_password
DB_NAME=minibar_takip
DB_PORT=5432

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
PORT=5000

# Celery Configuration (Redis sadece broker olarak)
# Docker: redis://redis:6379/0
# Local: redis://localhost:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120

# ML System Configuration
ML_ENABLED=true
ML_MIN_DATA_POINTS=30
ML_ACCURACY_THRESHOLD=0.85
ML_DATA_COLLECTION_INTERVAL=900
ML_ANOMALY_CHECK_INTERVAL=300
ML_MODELS_DIR=/app/ml_models

# Backup Configuration
BACKUP_DIR=/app/backups

# Timezone (KKTC)
TZ=Europe/Nicosia

# Other
PYTHONUNBUFFERED=1