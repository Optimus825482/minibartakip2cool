# ============================================
# FLASK CONFIGURATION (ZORUNLU)
# ============================================
# SECRET_KEY oluştur: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING

FLASK_ENV=production

# ============================================
# PORT CONFIGURATION
# ============================================
# Coolify otomatik ayarlar, değiştirme
PORT=5000

# ============================================
# ML SYSTEM (OPSIYONEL)
# ============================================
ML_ENABLED=true
ML_DATA_COLLECTION_INTERVAL=900
ML_ANOMALY_CHECK_INTERVAL=300
ML_TRAINING_SCHEDULE=0 0 * * *
ML_MIN_DATA_POINTS=100
ML_ACCURACY_THRESHOLD=0.85

# ============================================
# BACKUP CONFIGURATION (OPSIYONEL)
# ============================================
BACKUP_DIR=/app/backups

# ============================================
# GUNICORN CONFIGURATION (OPSIYONEL)
# ============================================
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120

# ============================================
# TIMEZONE (OPSIYONEL)
# ============================================
TZ=Asia/Nicosia
